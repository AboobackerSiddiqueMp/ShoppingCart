<section>
    <div class="container mt-5">
      <div class="row">
        {{#each item}}
        <div class="col-md-3">
          <div class="card" style="width: 18rem;">
            <img src="{{this.link}}" class="card-img-top" alt="...">
            <div class="card-body">
              <h5 class="card-title">{{this.name}}</h5>
              <p class="card-text">{{this.des}}</p>
              <a href="#" class="btn btn-primary">add to cart</a>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </section>
  
